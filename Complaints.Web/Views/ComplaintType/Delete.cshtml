@model ComplaintType

@{
    ViewData["Title"] = "Eliminar tipo de queja";
}

<h3>&iquest;Seguro de eliminar este tipo de queja?
</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="List">Regresar a la lista</a>
    </form>
</div>
